@model Nabeghe.Domain.ViewModels.Common.PagingViewModel

@if (Model.PageCount > 1)
{
	<div class="text-center">
		<nav aria-label="Page navigation example">
			<ul class="pagination round-pagination">
				<!-- دکمه قبلی -->
				<li class="page-item @(Model.Page == 1 ? "disabled" : "")">
					<a style="cursor: pointer;" class="page-link" onclick="fillPageId('@(Model.Page-1)')" tabindex="0">قبلی</a>
				</li>

				<!-- شماره صفحات -->
				@for (int i = Model.StartPage; i <= Model.EndPage; i++)
				{
					<li class="page-item @(i == Model.Page ? "active" : "")">
						<a style="cursor: pointer;" class="page-link" onclick="fillPageId('@i')" tabindex="0">@i</a>
					</li>
				}

				<!-- دکمه بعدی -->
				<li class="page-item @(Model.Page == Model.PageCount ? "disabled" : "")">
					<a style="cursor: pointer;" class="page-link" onclick="fillPageId('@(Model.Page+1)')" tabindex="0">بعدی</a>
				</li>
			</ul>
		</nav>
	</div>
}
