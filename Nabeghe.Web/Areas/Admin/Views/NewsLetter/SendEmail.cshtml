@model Nabeghe.Domain.ViewModels.NewsLetter.SendEmailForNewsLetterViewModel
<form asp-action="SendEmail"
      data-ajax="true"
      data-ajax-mehtod="post"
	  data-ajax-success="onSuccessSendEmail">

	<div class="row">
		<div class="col-12 col-md-12 p-2">
			<div class="form-group">
				<label asp-for="Subject" class="control-label p-1"></label>
				<textarea class="form-control" asp-for="Subject"></textarea>
				<span asp-validation-for="Subject"></span>
			</div>
		</div>
		<div class="col-12 col-md-12 p-2">
			<div class="form-group">
				<label asp-for="Message" class="control-label p-1"></label>
				<textarea class="form-control" asp-for="Message"></textarea>
				<span asp-validation-for="Message"></span>
			</div>
		</div>
		<div class="col-12 col-md-12 p-2">
			<div class="form-check">
				<label asp-for="IsHtml" class="control-label p-1"></label>
				<input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDanger" asp-for="IsHtml">
				<span asp-validation-for="IsHtml"></span>
			</div>
		</div>
		<div class="col-12 p-2">
			<div class="form-group">
				<button type="submit" class="btn btn-outline-success px-5 mb-3">ثبت پاسخ</button>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<script src="/AdminContent/assets/js/admin-newsLatter.js"></script>
}