<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
	<partial name="_MetaTags" />
	<link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg" />
	<cache expires-after="@TimeSpan.FromDays(30)"><partial name="_StyleReferences" /></cache>
	<title>@ViewBag.Title | سایت اموزشی نابغه</title>
</head>

<body>
	<div class="flex flex-col min-h-screen bg-background">
		<partial name="_PageHeader" />
		<main class="flex-auto py-5">
			@RenderBody()
		</main>
		<cache expires-after="@TimeSpan.FromDays(30)"><partial name="_Footer" /></cache>
	</div>
	<cache expires-after="@TimeSpan.FromDays(30)">
		<partial name="_JsReferences" />
		<partial name="_SiteNotification" />
	</cache>
	@RenderSection("Scripts", false)

</body>

</html>